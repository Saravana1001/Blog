---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Navbar from '../components/Navbar.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const blogs = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body id="root" class="h-screen w-full flex-col gap-5 items-center justify-center">
		<div id="Navbartitle" class="flex flex-col w-full gap-6 max-w-2xl h-screen">
			<Navbar />
			<h1 class="text-7xl font-medium tracking-tight"> hey  i am saravana <br>developer,<br>engineer</h1>
			
			{
				blogs.map((blog) => (
					<BlogCard title={blog.data.title} date={blog.data.pubDate} slug={blog.slug} />
				))
			}
			
			
			
			<!-- <BlogCard title="Embracing Minimalism in Design" date="23-04-2024"  /> -->
		</div>
		
	</body>
</html>
